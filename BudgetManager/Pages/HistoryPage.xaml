<Page x:Class="BudgetManager.Pages.HistoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BudgetManager.Pages"
      xmlns:userControls="clr-namespace:BudgetManager.User_controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HistoryPage">

    <Grid>
        <ScrollViewer x:Name="HistoryScrollViewer"
                      HorizontalScrollBarVisibility="Visible"
                      VerticalScrollBarVisibility="Disabled"
                      PanningMode="HorizontalOnly">
            <Grid x:Name="HistoryChartGrid"
                  Margin="10, 10, 10, 15"/>
        </ScrollViewer>
        <userControls:EmptyAppDataPlaceholder/>
    </Grid>
</Page>
