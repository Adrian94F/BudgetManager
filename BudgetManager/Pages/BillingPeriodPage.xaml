<Page x:Class="BudgetManager.Pages.BillingPeriodPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BudgetManager.Pages"
      mc:Ignorable="d"
      Title="BillingPeriodPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Początek"
                   VerticalAlignment="Center"
                   Grid.Column="0"
                   Grid.Row="0"/>
        <DatePicker Name="StartDatePicker"
                    VerticalAlignment="Top"
                    Grid.Row="0"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    SelectedDateChanged="DatePicker_OnSelectedDateChanged"/>

        <TextBlock Text="Koniec"
                   VerticalAlignment="Center"
                   Grid.Column="0"
                   Grid.Row="2"/>
        <DatePicker Name="EndDatePicker"
                    Grid.Column="2"
                    Grid.Row="2"
                    Grid.ColumnSpan="2"
                    SelectedDateChanged="DatePicker_OnSelectedDateChanged"/>

        <TextBlock Text="Dochód netto"
                   VerticalAlignment="Center"
                   Grid.Column="0"
                   Grid.Row="4"/>
        <TextBox x:Name="NetIncomeTextBox"
                 Margin="0, 0, 10, 0"
                 Grid.Column="2"
                 Grid.Row="4"
                 LostFocus="TextBox_OnLostFocus"/>
        <TextBlock VerticalAlignment="Center"
                   Text="zł"
                   Grid.Column="3"
                   Grid.Row="4"/>

        <TextBlock Text="Dochód dodatkowy"
                   VerticalAlignment="Center"
                   Grid.Column="0"
                   Grid.Row="6"/>
        <TextBox x:Name="AddIncomeTextBox"
                 Margin="0, 0, 10, 0"
                 Grid.Column="2"
                 Grid.Row="6"
                 LostFocus="TextBox_OnLostFocus"/>
        <TextBlock VerticalAlignment="Center"
                   Text="zł"
                   Grid.Column="3"
                   Grid.Row="6"/>

        <TextBlock Text="Planowane oszczędności"
                   VerticalAlignment="Center"
                   Grid.Column="0"
                   Grid.Row="8"/>
        <TextBox x:Name="PlannedSavingsTextBox"
                 Margin="0, 0, 10, 0"
                 Grid.Column="2"
                 Grid.Row="8"
                 LostFocus="TextBox_OnLostFocus"/>
        <TextBlock VerticalAlignment="Center"
                   Text="zł"
                   Grid.Column="3"
                   Grid.Row="8"/>

        

        <Grid Grid.Column="0"
              Grid.ColumnSpan="4"
              Grid.Row="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0"
                    HorizontalAlignment="Right"
                    Content="Usuń"
                    IsEnabled="False"
                    x:Name="DeleteButton"
                    Click="DeleteButton_OnClick"/>
            <Button Grid.Column="1"
                    Margin="5, 0, 0, 0"
                    Content="Zapisz"
                    IsEnabled="False"
                    x:Name="SaveButton"
                    Click="SaveButton_OnClick"/>
        </Grid>
    </Grid>
</Page>
