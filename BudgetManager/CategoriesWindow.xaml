<Window x:Class="BudgetManager.CategoriesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetManager"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Kategorie" Height="300" Width="250">
    <Grid Margin="7,7,7,7">

        <Button x:Name="BtnAdd"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Click="BtnAdd_Click"
                Grid.Row="0"
                Content="Dodaj"
                Margin="0,0,75,0"/>

        <Button x:Name="BtnOk"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Content="Ok"
                Click="BtnOk_Click"/>

        <Border Margin="0,0,0,25"
                BorderBrush="Gray"
                BorderThickness="1">
            <ScrollViewer>
                <Grid x:Name="CategoriesGrid"/>
            </ScrollViewer>
        </Border>

    </Grid>
</Window>
