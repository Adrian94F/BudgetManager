<UserControl x:Class="BudgetManager.User_controls.TitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:userControls="clr-namespace:BudgetManager.User_controls"
             mc:Ignorable="d" 
             d:DesignWidth="800">
    <Grid Background="{StaticResource Alpha-Gray-1}">
        <userControls:NavigationButtons Grid.Row="0"
                                        Grid.Column="0"
                                        x:Name="NavigationButtons"/>
        <TextBlock HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Text="Menedżer Budżetu"/>
    </Grid>
</UserControl>
