<Window x:Class="BudgetManager.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetManager"
        mc:Ignorable="d"
        Title="Ustawienia"
        Height="120"
        Width="350">
    <Grid Margin="10,10,10,10">
        <Label Content="Domyślny początek okresu rozliczeniowego"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"/>
        <TextBox x:Name="TypicalStartDayTextBox"
                 HorizontalAlignment="Right"
                 Height="23" Margin="0,4,0,0"
                 VerticalAlignment="Top"
                 Width="40"
                 LostFocus="NumberTextBox_LostFocus"/>

        <Button x:Name="BtnSave"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Grid.Column="0"
                Content="Zapisz"
                Margin="0,0,75,0"
                Click="BtnSave_Click"
                IsDefault="True"/>

        <Button x:Name="BtnCancel"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Content="Anuluj"
                Click="BtnCancel_Click"/>

    </Grid>
</Window>
