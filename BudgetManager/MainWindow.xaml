<Window x:Class="BudgetManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetManager"
        mc:Ignorable="d"
        Title="Menedżer Budżetu" Height="450" Width="800" MinWidth="600" MinHeight="250">
    <Grid Margin="0,0,0,0" >
        <TabControl Margin="10,0,10,10">
            <TabItem Header="Dziennik do odpuskwiania">
                <Grid>
                    <Image Height="255" Width="255" Source="jew.png" HorizontalAlignment="Right" VerticalAlignment="Bottom" Opacity="0.3" Margin="0,0,20,0" RenderOptions.BitmapScalingMode="Fant"/>
                    <ScrollViewer x:Name="logScrollViewer" Margin="0,0,0,0" PanningMode="Both">
                        <Grid>
                            <TextBlock x:Name="debugLogTextBlock" TextWrapping="Wrap" FontFamily="Consolas" FontSize="10" Margin="10" />
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Tabela">
                <Grid>
                    <Button Content="Dodaj"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Width="75"
                            Margin="10,10,0,0"/>
                    <Button Content="Edytuj"
                            HorizontalAlignment="Left"
                            Margin="90,10,0,0"
                            VerticalAlignment="Top"
                            Width="75"/>
                    <Button Content="Usuń"
                            HorizontalAlignment="Left"
                            Margin="170,10,0,0"
                            VerticalAlignment="Top"
                            Width="75"/>
                    <Button Content="Poprzedni"
                            HorizontalAlignment="Right"
                            Margin="0,10,90,0"
                            VerticalAlignment="Top"
                            Width="75"/>
                    <Button Content="Następny"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Width="75"
                            Margin="0,10,10,0"/>

                    <Grid x:Name="scrolledDataGrid"
                          Margin="0,35,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="20" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <ScrollViewer x:Name="HeaderDaysScrolViewer"
                                      CanContentScroll="True"
                                      Grid.Row="0"
                                      Grid.Column="1"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden" >
                            <Grid x:Name="HeaderDaysGrid"
                                  Margin="10,0,20,0"
                                  ShowGridLines="False"/>
                        </ScrollViewer>

                        <ScrollViewer x:Name="VerticalScrolViewer"
                                      CanContentScroll="True"
                                      Grid.Row="1"
                                      Grid.Column="0"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden" >
                            <Grid x:Name="VerticalDataGrid"
                                  ShowGridLines="False"
                                  Margin="0,0,0,20" />
                        </ScrollViewer>

                        <ScrollViewer x:Name="DataScrolViewer"
                                      HorizontalScrollBarVisibility="Visible"
                                      VerticalAlignment="Stretch"
                                      VerticalScrollBarVisibility="Visible"
                                      ScrollChanged="DataScrolViewer_ScrollChanged"
                                      Grid.Row="1"
                                      Grid.Column="1"
                                      Margin="10,0,0,0">
                            <Grid>
                                <Grid x:Name="ExpensesGrid"
                                      ShowGridLines="False"
                                      ScrollViewer.CanContentScroll="True"/>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Wypalenie">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Historia">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Ustawienia">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <!---<StatusBar Height="24" VerticalAlignment="Bottom"/>-->
    </Grid>
</Window>
