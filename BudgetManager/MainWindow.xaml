<Window x:Class="BudgetManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetManager"
        mc:Ignorable="d"
        Title="Menedżer Budżetu" Height="450" Width="800" MinWidth="600" MinHeight="250">
    <Grid Margin="0,0,0,0" >
        <TabControl Margin="10,0,10,10">
            <TabItem Header="Dziennik do odpuskwiania">
                <Grid>
                    <Image Height="255"
                           Width="255"
                           Source="jew.png"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Opacity="0.3"
                           Margin="0,0,20,0"
                           RenderOptions.BitmapScalingMode="Fant"/>
                    <ScrollViewer x:Name="logScrollViewer" Margin="0,0,0,0" PanningMode="Both">
                        <Grid>
                            <TextBlock x:Name="debugLogTextBlock" TextWrapping="Wrap" FontFamily="Consolas" FontSize="10" Margin="10" />
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Tabela">
                <Grid>
                    <Button x:Name="BtnAdd"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Margin="10,10,0,0"
                            IsEnabled="False"
                            Opacity="0.5">
                        <Image Height="30"
                               Width="30"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/Icons/019-add.png"/>

                    </Button>
                    <Button x:Name="BtnEdit"
                            HorizontalAlignment="Left"
                            Margin="49,10,0,0"
                            VerticalAlignment="Top"
                            IsEnabled="False"
                            Opacity="0.5">
                        <Image Height="30"
                               Width="30"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/Icons/018-edit.png"/>

                    </Button>
                    <Button x:Name="BtnDel"
                            HorizontalAlignment="Left"
                            Margin="88,10,0,0"
                            VerticalAlignment="Top"
                            IsEnabled="False"
                            Opacity="0.5">
                        <Image Height="30"
                               Width="30"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/Icons/023-remove.png"/>
                    </Button>
                    <Button x:Name="BtnPrev"
                            HorizontalAlignment="Right"
                            Margin="0,10,49,0"
                            VerticalAlignment="Top"
                            IsEnabled="False"
                            Opacity="0.5"
                            Click="BtnPrev_Click">
                        <Image Height="30"
                               Width="30"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/Icons/prev-button.png"/>
                    </Button>
                    <Button x:Name="BtnNext"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            IsEnabled="False"
                            Click="BtnNext_Click"
                            Margin="0,10,10,0"
                            Opacity="0.5">
                        <Image Height="30"
                               Width="30"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/Icons/next-button.png"/>
                    </Button>

                    <Grid x:Name="scrolledDataGrid"
                          Margin="0,49,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="16" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Rectangle Grid.Row="0"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   Fill="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" />

                        <Rectangle Grid.Row="1"
                                   Grid.Column="0"
                                   Fill="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />

                        <Grid x:Name="Header"
                              Grid.Row="0"
                              Grid.Column="0">
                            <TextBlock HorizontalAlignment="Left"
                                       Margin="3,0,0,0"
                                       TextWrapping="Wrap"
                                       Text="Kategoria"
                                       VerticalAlignment="Top"/>

                        </Grid>

                        <ScrollViewer x:Name="HeaderDaysScrollViewer"
                                      CanContentScroll="True"
                                      Grid.Row="0"
                                      Grid.Column="1"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden" >
                            <Grid x:Name="HeaderDaysGrid"
                                  Margin="0,0,20,0"
                                  ShowGridLines="False"/>
                        </ScrollViewer>

                        <ScrollViewer x:Name="VerticalScrolViewer"
                                      CanContentScroll="True"
                                      Grid.Row="1"
                                      Grid.Column="0"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden" >
                            <Grid x:Name="VerticalDataGrid"
                                  ShowGridLines="False"
                                  Margin="3,0,0,20" />
                        </ScrollViewer>

                        <ScrollViewer x:Name="DataScrolViewer"
                                      HorizontalScrollBarVisibility="Visible"
                                      VerticalAlignment="Stretch"
                                      VerticalScrollBarVisibility="Visible"
                                      ScrollChanged="DataScrolViewer_ScrollChanged"
                                      Grid.Row="1"
                                      Grid.Column="1"
                                      Margin="0,0,0,0">
                            <Grid>
                                <Grid x:Name="ExpensesGrid"
                                      ShowGridLines="False"
                                      ScrollViewer.CanContentScroll="True"/>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Wypalenie">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Historia">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Ustawienia">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
