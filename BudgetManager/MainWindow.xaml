<Window x:Class="BudgetManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetManager"
        mc:Ignorable="d"
        Title="Menedżer Budżetu" Height="450" Width="800" MinWidth="600" MinHeight="250">
    <Grid Margin="0,0,0,0" >
        <TabControl Margin="10,0,10,24">
            <TabItem Header="Dziennik do odpuskwiania">
                <Grid>
                    <Image Height="100" Width="100" Source="jew.png" HorizontalAlignment="Right" VerticalAlignment="Bottom" Opacity="0.5" Margin="0,0,20,0"/>
                    <ScrollViewer x:Name="logScrollViewer" Margin="0,0,0,0" PanningMode="Both">
                        <Grid>
                            <TextBlock x:Name="debugLogTextBlock" TextWrapping="Wrap" FontFamily="Consolas" FontSize="10" Margin="10" />
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Tabela">
                <Grid>
                    <Button Content="Dodaj" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button Content="Edytuj" HorizontalAlignment="Left" Margin="90,10,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button Content="Usuń" HorizontalAlignment="Left" Margin="170,10,0,0" VerticalAlignment="Top" Width="75"/>
                    <Button Content="Poprzedni" HorizontalAlignment="Right" Margin="0,10,90,0" VerticalAlignment="Top" Width="75"/>
                <Button Content="Następny" HorizontalAlignment="Right" Margin="0,10,10,0" VerticalAlignment="Top" Width="75"/>
                    <ScrollViewer Margin="0,35,0,0" PanningMode="Both">
                        <Grid x:Name="dataGrid">
                            
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Wypalenie">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Historia">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Ustawienia">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
        <StatusBar Height="24" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
