<Window x:Class="BudgetManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetManager" 
        mc:Ignorable="d"
        Title="Menedżer Budżetu"
        Height="450"
        Width="600"
        MinWidth="600"
        MinHeight="300">
    <Grid Margin="0,0,0,0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <Button x:Name="BtnAdd"
                Click="BtnAdd_Click"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="7,7,0,0"
                Content="Dodaj"/>

        <Button x:Name="BtnCategories"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="82,7,0,0"
                Content="Kategorie"
                Click="BtnCategories_Click"/>

        <Button x:Name="BtnPeriods"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="157,7,0,0"
                Content="Miesiące"
                Click="BtnPeriods_Click"/>

        <Button x:Name="BtnSettings"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="232,7,0,0"
                Content="Ustawienia"
                Click="BtnSettings_Click"/>

        <Button x:Name="BtnPrev"
                HorizontalAlignment="Right"
                Margin="0,7,82,0"
                VerticalAlignment="Top"
                IsEnabled="False"
                Click="BtnPrev_Click"
                Content="Poprzedni"/>

        <Button x:Name="BtnNext"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                IsEnabled="False"
                Click="BtnNext_Click"
                Margin="0,7,7,0"
                Content="Następny"/>

        <TextBlock x:Name="PeriodDatesTextBlock"
                   Text="Period dates..."
                   Grid.Row="1"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Margin="10,7"/>

        <TabControl Margin="7,7,7,7"
                    Grid.Row="1"
                    SelectionChanged="TabControl_SelectionChanged">
            <TabItem x:Name="SummaryTabItem"
                     Header="Podsumowanie">
                <Grid Margin="0,0,0,0"
                        Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="16" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"
                                          MinWidth="100"
                                          MaxWidth="300"/>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Rectangle Grid.Row="0"
                               Grid.Column="0"
                               Grid.ColumnSpan="2"
                               Fill="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" />

                    <Rectangle Grid.Row="1"
                               Grid.Column="0"
                               Fill="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />

                    <Grid x:Name="Header"
                          Grid.Row="0"
                          Grid.Column="0">
                        <TextBlock HorizontalAlignment="Left"
                                   Margin="3,0,0,0"
                                   TextWrapping="Wrap"
                                   Text="Kategoria"
                                   VerticalAlignment="Top"/>

                    </Grid>

                    <ScrollViewer x:Name="HeaderDaysScrollViewer"
                                  CanContentScroll="True"
                                  Grid.Row="0"
                                  Grid.Column="1"
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Hidden" >
                        <Grid x:Name="HeaderDaysGrid"
                              Margin="0,0,20,0"/>
                    </ScrollViewer>

                    <ScrollViewer x:Name="VerticalScrolViewer"
                                  CanContentScroll="True"
                                  Grid.Row="1"
                                  Grid.Column="0"
                                  HorizontalScrollBarVisibility="Hidden"
                                  VerticalScrollBarVisibility="Hidden" >
                        <Grid x:Name="VerticalDataGrid"
                              Margin="3,0,0,20" />
                    </ScrollViewer>

                    <ScrollViewer x:Name="DataScrolViewer"
                                  HorizontalScrollBarVisibility="Visible"
                                  VerticalAlignment="Stretch"
                                  VerticalScrollBarVisibility="Visible"
                                  ScrollChanged="DataScrolViewer_ScrollChanged"
                                  Grid.Row="1"
                                  Grid.Column="1"
                                  Margin="0,0,0,0">
                        <Grid>
                            <Grid x:Name="ExpensesGrid"
                                  ScrollViewer.CanContentScroll="True"/>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem x:Name="ListTabitem"
                     Header="Lista wydatków"
                     IsEnabled="False">
                <Grid/>
            </TabItem>
            <TabItem x:Name="BurndownTabItem"
                     Header="Wypalenie">
                <Grid x:Name="BurndownChartGrid"/>
            </TabItem>
            <TabItem x:Name="HistoryTabItem"
                     Header="Historia"
                     IsEnabled="False">
                <Grid/>
            </TabItem>
        </TabControl>

        <Border VerticalAlignment="Bottom"
                Grid.Row="2"
                Margin="7,0,7,7"
                Padding="3">
            <Grid x:Name="SummaryGrid">

                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock HorizontalAlignment="Left"
                           Grid.Row="0"
                           TextWrapping="Wrap"
                           Text="Dochód netto"
                           VerticalAlignment="Bottom"/>
                <TextBlock x:Name="NetIncomeTextBlock"
                           Grid.Column="1"
                           Grid.Row="0"
                           HorizontalAlignment="Right"
                           TextWrapping="Wrap"
                           TextAlignment="Right"
                           Text="...zł"
                           VerticalAlignment="Top"
                           Margin="10,0,0,0"/>
                <TextBlock HorizontalAlignment="Left"
                           Grid.Row="1"
                           TextWrapping="Wrap"
                           Text="Inny dochód"
                           VerticalAlignment="Bottom" Width="69"/>
                <TextBlock x:Name="AddIncomeTextBlock"
                           Grid.Column="1"
                           Grid.Row="1"
                           HorizontalAlignment="Right"
                           TextWrapping="Wrap"
                           TextAlignment="Right"
                           Text="...zł"
                           VerticalAlignment="Top"
                           Margin="10,0,0,0"/>
                <TextBlock HorizontalAlignment="Left"
                           Grid.Row="2"
                           TextWrapping="Wrap"
                           Text="Suma dochodów"
                           VerticalAlignment="Bottom" Width="92"/>
                <TextBlock x:Name="IncomeSumTextBlock"
                           Grid.Column="1"
                           Grid.Row="2"
                           HorizontalAlignment="Right"
                           TextWrapping="Wrap"
                           TextAlignment="Right"
                           Text="...zł"
                           VerticalAlignment="Top"
                           Margin="10,0,0,0"/>

                <TextBlock HorizontalAlignment="Left"
                           Grid.Row="0"
                           Grid.Column="3"
                           TextWrapping="Wrap"
                           Text="Suma wydatków"
                           VerticalAlignment="Bottom" Width="89"/>
                <TextBlock x:Name="ExpensesSumTextBlock"
                           Grid.Column="4"
                           Grid.Row="0"
                           HorizontalAlignment="Right"
                           TextWrapping="Wrap"
                           TextAlignment="Right"
                           Text="...zł"
                           VerticalAlignment="Top"
                           Margin="10,0,0,0"/>
                <TextBlock HorizontalAlignment="Left"
                           Grid.Row="1"
                           Grid.Column="3"
                           TextWrapping="Wrap"
                           Text="Bilans"
                           VerticalAlignment="Bottom" Width="34"/>
                <TextBlock x:Name="BalanceTextBlock"
                           Grid.Column="4"
                           Grid.Row="1"
                           HorizontalAlignment="Right"
                           TextWrapping="Wrap"
                           TextAlignment="Right"
                           Text="...zł"
                           VerticalAlignment="Top"
                           Margin="10,0,0,0"/>

                <TextBlock HorizontalAlignment="Left"
                           Grid.Row="0"
                           Grid.Column="6"
                           TextWrapping="Wrap"
                           Text="Pozostałe dni"
                           VerticalAlignment="Bottom" Width="74"/>
                <TextBlock x:Name="DaysLeftTextBlock"
                           Grid.Column="7"
                           Grid.Row="0"
                           HorizontalAlignment="Right"
                           TextWrapping="Wrap"
                           TextAlignment="Right"
                           Text="..."
                           VerticalAlignment="Top"
                           Margin="10,0,0,0"/>
                <TextBlock HorizontalAlignment="Left"
                           Grid.Column="6"
                           Grid.Row="1"
                           TextWrapping="Wrap"
                           Text="Dzienny wydatek"
                           VerticalAlignment="Bottom" Width="93"/>
                <TextBlock x:Name="EstimatedDailyExpenseTextBlock"
                           Grid.Column="7"
                           Grid.Row="1"
                           HorizontalAlignment="Right"
                           TextWrapping="Wrap"
                           TextAlignment="Right"
                           Text="...zł"
                           VerticalAlignment="Top"
                           Margin="10,0,0,0"/>

            </Grid>
        </Border>
    </Grid>
</Window>
