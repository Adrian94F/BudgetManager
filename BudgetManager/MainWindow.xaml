<Window x:Class="BudgetManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetManager" 
        xmlns:commands="clr-namespace:BudgetManager.Commands"
        mc:Ignorable="d"
        Title="Menedżer Budżetu"
        Height="600"
        Width="900"
        MinWidth="750"
        MinHeight="220">
    <Window.CommandBindings>
        <CommandBinding Command="{ x:Static commands:Commands.Save }" Executed="SaveMenuItem_Click" />
        <CommandBinding Command="{ x:Static commands:Commands.Settings }" Executed="SettingsMenuItem_Click" />
        <CommandBinding Command="{ x:Static commands:Commands.Close }" Executed="CloseMenuItem_Click" />
        <CommandBinding Command="{ x:Static commands:Commands.Add }" Executed="AddExpenseMenuItem_Click" />
        <CommandBinding Command="{ x:Static commands:Commands.Previous }" Executed="PrevMenuItem_Click" />
        <CommandBinding Command="{ x:Static commands:Commands.Next }" Executed="NextPeriodMenuItem_Click" />
        <CommandBinding Command="{ x:Static commands:Commands.BillingPeriods }" Executed="PeriodsMenuItem_Click" />
        <CommandBinding Command="{ x:Static commands:Commands.Categories }" Executed="CategoriesMenuItem_Click" />
        <CommandBinding Command="{ x:Static commands:Commands.TableView }" Executed="SelectedPeriodTableView" />
        <CommandBinding Command="{ x:Static commands:Commands.ListView }" Executed="SelectedPeriodListView" />
        <CommandBinding Command="{ x:Static commands:Commands.BurndownView }" Executed="SelectedPeriodBurndownView" />
        <CommandBinding Command="{ x:Static commands:Commands.HistoryView }" Executed="HistoryView" />
        <CommandBinding Command="{ x:Static commands:Commands.About }" Executed="AboutMenuItem_Click" />
        <CommandBinding Command="{ x:Static commands:Commands.Help }" Executed="HelpMenuItem_Click" />
    </Window.CommandBindings>
    <Window.InputBindings>
        <KeyBinding Key="S" Modifiers="Control" Command="{ x:Static commands:Commands.Save }"/>
        <KeyBinding Key="N" Modifiers="Control" Command="{ x:Static commands:Commands.Add }"/>
        <KeyBinding Key="Esc" Command="{ x:Static commands:Commands.Close }"/>
        <KeyBinding Key="PageUp" Command="{ x:Static commands:Commands.Previous }"/>
        <KeyBinding Key="PageDown" Command="{ x:Static commands:Commands.Next }"/>
        <KeyBinding Key="K" Modifiers="Control" Command="{ x:Static commands:Commands.Categories }"/>
        <KeyBinding Key="M" Modifiers="Control" Command="{ x:Static commands:Commands.BillingPeriods }"/>
        <KeyBinding Key="W" Modifiers="Control" Command="{ x:Static commands:Commands.TableView }"/>
        <KeyBinding Key="L" Modifiers="Control" Command="{ x:Static commands:Commands.ListView }"/>
        <KeyBinding Key="B" Modifiers="Control" Command="{ x:Static commands:Commands.BurndownView }"/>
        <KeyBinding Key="H" Modifiers="Control" Command="{ x:Static commands:Commands.HistoryView }"/>
    </Window.InputBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Plik">
                <MenuItem Header="Zapisz zmiany"
                          Command="{ x:Static commands:Commands.Save }"
                          InputGestureText="Ctrl+S"/>
                <MenuItem Header="Ustawienia programu"
                          Command="{ x:Static commands:Commands.Settings }"/>
                <Separator />
                <MenuItem Header="Zamknij"
                          Command="{ x:Static commands:Commands.Close }"
                          InputGestureText="Esc"/>
            </MenuItem>
            <MenuItem Header="Wydatki">
                <MenuItem Header="Dodaj wydatek"
                          Command="{ x:Static commands:Commands.Add }"
                          InputGestureText="Ctrl+N"/>
                <Separator />
                <MenuItem x:Name="MenuItemPrev"
                          Header="Poprzedni miesiąc"
                          IsEnabled="False"
                          Command="{ x:Static commands:Commands.Previous }"
                          InputGestureText="PageUp"/>
                <MenuItem x:Name="MenuItemNext"
                          Header="Następny miesiąc"
                          IsEnabled="False"
                          Command="{ x:Static commands:Commands.Next }"
                          InputGestureText="PageDown"/>
                <Separator />
                <MenuItem Header="Miesiące"
                          Command="{ x:Static commands:Commands.BillingPeriods }"
                          InputGestureText="Ctrl+M"/>
                <MenuItem Header="Kategorie"
                          Command="{ x:Static commands:Commands.Categories }"
                          InputGestureText="Ctrl+K"/>
            </MenuItem>
            <MenuItem Name="ViewMenuItem"
                      Header="Widok">
                <MenuItem Name="ExpensesTableMenuItem"
                          Header="Tabela wydatków"
                          IsCheckable="True"
                          IsChecked="True"
                          Command="{ x:Static commands:Commands.TableView }"
                          InputGestureText="Ctrl+W"/>
                <MenuItem Name="ExpensesListMenuItem"
                          Header="Lista wydatków"
                          IsCheckable="True"
                          Command="{ x:Static commands:Commands.ListView }"
                          InputGestureText="Ctrl+L"/>
                <MenuItem Name="BurndownMenuItem"
                          Header="Wypalenie"
                          IsCheckable="True"
                          Command="{ x:Static commands:Commands.BurndownView }"
                          InputGestureText="Ctrl+B"/>
                <Separator />
                <MenuItem Name="HistoryMenuItem"
                          Header="Historia"
                          IsCheckable="True"
                          Command="{ x:Static commands:Commands.HistoryView }"
                          InputGestureText="Ctrl+H"/>
            </MenuItem>
            <MenuItem Header="Informacje">
                <MenuItem Header="O programie"
                          Command="{ x:Static commands:Commands.About }"/>
                <Separator />
                <MenuItem Header="Pomoc"
                          Command="{ x:Static commands:Commands.Help }"/>
            </MenuItem>
        </Menu>
        <Grid Margin="0,0,0,0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>
            <TabControl x:Name="ViewsTabControl"
                        Grid.Row="1"
                        BorderThickness="0">
                <TabControl.ItemContainerStyle>
                    <Style TargetType="{x:Type TabItem}">
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </Style>
                </TabControl.ItemContainerStyle>
                <TabItem x:Name="SelectedPeriodTabItem"
                         Header="Wybrany miesiąc">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <TabControl x:Name="SelectedPeriodTabControl"
                                    Margin="7,7,7,7"
                                    Grid.Row="0"
                                    SelectionChanged="TabControl_SelectionChanged">
                            <TabControl.ItemContainerStyle>
                                <Style TargetType="{x:Type TabItem}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </Style>
                            </TabControl.ItemContainerStyle>
                            <TabItem x:Name="SummaryTabItem"
                                     Header="Podsumowanie">
                                <Grid Margin="0,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="16" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"
                                                          MinWidth="100"
                                                          MaxWidth="300"/>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Rectangle Grid.Row="0"
                                               Grid.Column="0"
                                               Grid.ColumnSpan="2"
                                               Fill="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" />

                                    <Rectangle Grid.Row="1"
                                               Grid.Column="0"
                                               Fill="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />

                                    <Grid x:Name="Header"
                                          Grid.Row="0"
                                          Grid.Column="0">
                                        <Button Content="Kategoria"
                                                HorizontalContentAlignment="Left"
                                                VerticalAlignment="Top"
                                                BorderThickness="0"
                                                Padding="3, 0, 0, 0"
                                                Click="CategoriesMenuItem_Click"/>

                                    </Grid>

                                    <ScrollViewer x:Name="HeaderDaysScrollViewer"
                                                  CanContentScroll="True"
                                                  Grid.Row="0"
                                                  Grid.Column="1"
                                                  HorizontalScrollBarVisibility="Hidden"
                                                  VerticalScrollBarVisibility="Hidden"
                                                  PanningMode="HorizontalOnly">
                                        <Grid x:Name="HeaderDaysGrid"
                                              Margin="0,0,20,0"/>
                                    </ScrollViewer>

                                    <ScrollViewer x:Name="VerticalScrolViewer"
                                                  CanContentScroll="True"
                                                  ScrollChanged="VerticalScrolViewer_ScrollChanged"
                                                  Grid.Row="1"
                                                  Grid.Column="0"
                                                  HorizontalScrollBarVisibility="Hidden"
                                                  VerticalScrollBarVisibility="Hidden"
                                                  PanningMode="VerticalOnly">
                                        <Grid x:Name="VerticalDataGrid"
                                              Margin="0,0,0,17" />
                                    </ScrollViewer>

                                    <ScrollViewer x:Name="DataScrolViewer"
                                                  HorizontalScrollBarVisibility="Visible"
                                                  VerticalAlignment="Stretch"
                                                  VerticalScrollBarVisibility="Visible"
                                                  ScrollChanged="DataScrolViewer_ScrollChanged"
                                                  Grid.Row="1"
                                                  Grid.Column="1"
                                                  Margin="0,0,0,0"
                                                  PanningMode="Both"
                                                  PanningRatio="1.2">
                                        <Grid x:Name="ExpensesGrid"
                                              ScrollViewer.CanContentScroll="True"/>
                                    </ScrollViewer>
                                </Grid>
                            </TabItem>
                            <TabItem x:Name="ListTabItem"
                                     Header="Lista wydatków">
                                <Grid Margin="0,0,0,0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="16" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="70"/>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Rectangle Grid.Row="0"
                                                   Grid.Column="0"
                                                   Grid.ColumnSpan="4"
                                                   Fill="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" />
                                        <TextBlock Grid.Column="0"
                                                   Text="Data"
                                                   Margin="3,0,0,0"/>
                                        <TextBlock Grid.Column="1"
                                                   Text="Wartość"
                                                   Margin="3,0,0,0"/>
                                        <TextBlock Grid.Column="2"
                                                   Text="Kategoria"
                                                   Margin="3,0,0,0"/>
                                        <TextBlock Grid.Column="3"
                                                   Text="Dodatkowe informacje"
                                                   Margin="3,0,0,0"/>

                                    </Grid>
                                    <ScrollViewer Grid.Row="1"
                                                  PanningMode="VerticalOnly"
                                                  PanningRatio="1.2">
                                        <Grid x:Name="ExpensesListGrid"/>
                                    </ScrollViewer>
                                </Grid>
                            </TabItem>
                            <TabItem x:Name="BurndownTabItem"
                                     Header="Wypalenie">
                                <Grid x:Name="BurndownChartGrid"/>
                            </TabItem>
                        </TabControl>

                        <Border 
                            VerticalAlignment="Bottom"
                            Grid.Row="1"
                            Margin="7,0,7,7"
                            Padding="5">

                            <Grid x:Name="SummaryGrid"
                                Margin="0,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"
                                                      MinWidth="10"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"
                                                      MinWidth="10"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="*"
                                                      MinWidth="10"/>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- title -->
                                <TextBlock x:Name="PeriodDatesTextBlock"
                                           Text="Podsumowanie dla..."
                                           Grid.Row="0"
                                           Grid.RowSpan="3"
                                           Grid.Column="0"
                                           Grid.ColumnSpan="5"/>
                                <Separator Grid.Row="0"
                                           Grid.RowSpan="3"
                                           Grid.Column="0"
                                           Grid.ColumnSpan="5"
                                           VerticalAlignment="Bottom"
                                           HorizontalAlignment="Left"
                                           Margin="0, 18, 0, 3"
                                           Width="300"/>


                                <!-- separators -->
                                <Separator Grid.Row="5"
                                           Grid.Column="1"/>
                                <Separator Grid.Row="5"
                                           Grid.Column="4"/>
                                <Separator Grid.Row="5"
                                           Grid.Column="7"/>

                                <!-- column 0-1 -->
                                <TextBlock HorizontalAlignment="Left"
                                           Grid.Row="3"
                                           Grid.Column="0"
                                           TextWrapping="Wrap"
                                           Text="Wydatki codzienne"
                                           VerticalAlignment="Top"/>
                                <TextBlock x:Name="DailyExpensesSumTextBlock"
                                           Grid.Column="1"
                                           Grid.Row="3"
                                           HorizontalAlignment="Right"
                                           TextWrapping="Wrap"
                                           TextAlignment="Right"
                                           Text="...zł"
                                           VerticalAlignment="Top"
                                           Margin="10,0,0,0"/>
                                <TextBlock HorizontalAlignment="Left"
                                           Grid.Row="4"
                                           Grid.Column="0"
                                           TextWrapping="Wrap"
                                           Text="Wydatki miesięczne"
                                           VerticalAlignment="Top"/>
                                <TextBlock x:Name="MonthlyExpensesSumTextBlock"
                                           Grid.Column="1"
                                           Grid.Row="4"
                                           HorizontalAlignment="Right"
                                           TextWrapping="Wrap"
                                           TextAlignment="Right"
                                           Text="...zł"
                                           VerticalAlignment="Top"
                                           Margin="10,0,0,0"/>
                                <TextBlock HorizontalAlignment="Left"
                                           Grid.Row="6"
                                           Grid.Column="0"
                                           TextWrapping="Wrap"
                                           Text="Suma wydatków"
                                           VerticalAlignment="Top"/>
                                <TextBlock x:Name="ExpensesSumTextBlock"
                                           Grid.Column="1"
                                           Grid.Row="6"
                                           HorizontalAlignment="Right"
                                           TextWrapping="Wrap"
                                           TextAlignment="Right"
                                           Text="...zł"
                                           VerticalAlignment="Top"
                                           Margin="10,0,0,0"/>

                                <!-- column 3-4 -->
                                <TextBlock HorizontalAlignment="Left"
                                           Grid.Column="3"
                                           Grid.Row="3"
                                           TextWrapping="Wrap"
                                           Text="Dochód netto"
                                           VerticalAlignment="Top"/>
                                <TextBlock x:Name="NetIncomeTextBlock"
                                           Grid.Column="4"
                                           Grid.Row="3"
                                           HorizontalAlignment="Right"
                                           TextWrapping="Wrap"
                                           TextAlignment="Right"
                                           Text="...zł"
                                           VerticalAlignment="Top"
                                           Margin="10,0,0,0"/>
                                <TextBlock HorizontalAlignment="Left"
                                           Grid.Column="3"
                                           Grid.Row="4"
                                           TextWrapping="Wrap"
                                           Text="Inny dochód"
                                           VerticalAlignment="Top"
                                           Width="69"/>
                                <TextBlock x:Name="AddIncomeTextBlock"
                                           Grid.Column="4"
                                           Grid.Row="4"
                                           HorizontalAlignment="Right"
                                           TextWrapping="Wrap"
                                           TextAlignment="Right"
                                           Text="...zł"
                                           VerticalAlignment="Top"
                                           Margin="10,0,0,0"/>
                                <TextBlock HorizontalAlignment="Left"
                                           Grid.Column="3"
                                           Grid.Row="6"
                                           TextWrapping="Wrap"
                                           Text="Suma dochodów"
                                           VerticalAlignment="Top"/>
                                <TextBlock x:Name="IncomeSumTextBlock"
                                           Grid.Column="4"
                                           Grid.Row="6"
                                           HorizontalAlignment="Right"
                                           TextWrapping="Wrap"
                                           TextAlignment="Right"
                                           Text="...zł"
                                           VerticalAlignment="Top"
                                           Margin="10,0,0,0"/>

                                <!-- column 6-7 -->
                                <TextBlock HorizontalAlignment="Left"
                                           Grid.Column="6"
                                           Grid.Row="2"
                                           TextWrapping="Wrap"
                                           Text="Suma dochodów"
                                           VerticalAlignment="Top"/>
                                <TextBlock x:Name="IncomeSumTextBlock2"
                                           Grid.Column="7"
                                           Grid.Row="2"
                                           HorizontalAlignment="Right"
                                           TextWrapping="Wrap"
                                           TextAlignment="Right"
                                           Text="...zł"
                                           VerticalAlignment="Top"
                                           Margin="10,0,0,0"/>
                                <TextBlock HorizontalAlignment="Left"
                                           Grid.Row="3"
                                           Grid.Column="6"
                                           TextWrapping="Wrap"
                                           Text="Suma wydatków"
                                           VerticalAlignment="Top"/>
                                <TextBlock x:Name="ExpensesSumTextBlock2"
                                           Grid.Column="7"
                                           Grid.Row="3"
                                           HorizontalAlignment="Right"
                                           TextWrapping="Wrap"
                                           TextAlignment="Right"
                                           Text="...zł"
                                           VerticalAlignment="Top"
                                           Margin="10,0,0,0"/>
                                <TextBlock HorizontalAlignment="Left"
                                           Grid.Row="4"
                                           Grid.Column="6"
                                           TextWrapping="Wrap"
                                           Text="Planowane oszczędności"
                                           VerticalAlignment="Top"/>
                                <TextBlock x:Name="PlannedSavingsTextBlock"
                                           Grid.Column="7"
                                           Grid.Row="4"
                                           HorizontalAlignment="Right"
                                           TextWrapping="Wrap"
                                           TextAlignment="Right"
                                           Text="...zł"
                                           VerticalAlignment="Top"
                                           Margin="10,0,0,0"/>
                                <TextBlock HorizontalAlignment="Left"
                                           Grid.Row="6"
                                           Grid.Column="6"
                                           TextWrapping="Wrap"
                                           Text="Bilans"
                                           VerticalAlignment="Top"/>
                                <TextBlock x:Name="BalanceTextBlock"
                                           Grid.Column="7"
                                           Grid.Row="6"
                                           HorizontalAlignment="Right"
                                           TextWrapping="Wrap"
                                           TextAlignment="Right"
                                           Text="...zł"
                                           VerticalAlignment="Top"
                                           Margin="10,0,0,0"/>

                                <!-- column 9-10 -->
                                <TextBlock HorizontalAlignment="Left"
                                           Grid.Row="2"
                                           Grid.Column="9"
                                           TextWrapping="Wrap"
                                           Text="Pozostałe dni"
                                           VerticalAlignment="Top"/>
                                <TextBlock x:Name="DaysLeftTextBlock"
                                           Grid.Column="10"
                                           Grid.Row="2"
                                           HorizontalAlignment="Right"
                                           TextWrapping="Wrap"
                                           TextAlignment="Right"
                                           Text="..."
                                           VerticalAlignment="Top"
                                           Margin="10,0,0,0"/>
                                <TextBlock HorizontalAlignment="Left"
                                           Grid.Column="9"
                                           Grid.Row="3"
                                           TextWrapping="Wrap"
                                           Text="Dzienny wydatek"
                                           VerticalAlignment="Top"/>
                                <TextBlock x:Name="EstimatedDailyExpenseTextBlock"
                                           Grid.Column="10"
                                           Grid.Row="3"
                                           HorizontalAlignment="Right"
                                           TextWrapping="Wrap"
                                           TextAlignment="Right"
                                           Text="...zł"
                                           VerticalAlignment="Top"
                                           Margin="10,0,0,0"/>

                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>
                <TabItem x:Name="HistoryTabItem"
                         Header="Historia">
                    <Border 
                            Margin="7,7,7,7"
                            Padding="5">
                        <Grid x:Name="HistoryChartGrid"/>
                    </Border>
                </TabItem>
            </TabControl>
        </Grid>
    </DockPanel>
</Window>
