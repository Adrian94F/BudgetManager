<Window x:Class="BudgetManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetManager" 
        mc:Ignorable="d"
        Title="Menedżer Budżetu"
        Height="450"
        Width="650"
        MinWidth="650"
        MinHeight="300">
    <Grid Margin="0,0,0,0" >
        <Button x:Name="BtnAdd"
                Click="BtnAdd_Click"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="7,7,0,0"
                Content="Dodaj"/>

        <Button x:Name="BtnCategories"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="82,7,0,0"
                Content="Kategorie"/>

        <Button x:Name="BtnSettings"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="157,7,0,0"
                Content="Ustawienia"/>

        <Button x:Name="BtnPrev"
                HorizontalAlignment="Right"
                Margin="0,7,82,0"
                VerticalAlignment="Top"
                IsEnabled="False"
                Click="BtnPrev_Click"
                Content="Poprzedni"/>

        <Button x:Name="BtnNext"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                IsEnabled="False"
                Click="BtnNext_Click"
                Margin="0,7,7,0"
                Content="Następny"/>

        <TabControl Margin="7,32,7,7">
            <TabItem Header="Tabela">
                <!--<TabControl Margin="3,0,3,3"
                    TabStripPlacement="Left">
            <TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Height="36"
                               Width="36"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/Icons/table.png" />
                    </StackPanel>
                </TabItem.Header>-->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <Grid Margin="0,0,0,7"
                          Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="16" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"
                                              MaxWidth="300"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Rectangle Grid.Row="0"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   Fill="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" />

                        <Rectangle Grid.Row="1"
                                   Grid.Column="0"
                                   Fill="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />

                        <Grid x:Name="Header"
                              Grid.Row="0"
                              Grid.Column="0">
                            <TextBlock HorizontalAlignment="Left"
                                       Margin="3,0,0,0"
                                       TextWrapping="Wrap"
                                       Text="Kategoria"
                                       VerticalAlignment="Top"/>

                        </Grid>

                        <ScrollViewer x:Name="HeaderDaysScrollViewer"
                                      CanContentScroll="True"
                                      Grid.Row="0"
                                      Grid.Column="1"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden" >
                            <Grid x:Name="HeaderDaysGrid"
                                  Margin="0,0,20,0"
                                  ShowGridLines="False"/>
                        </ScrollViewer>

                        <ScrollViewer x:Name="VerticalScrolViewer"
                                      CanContentScroll="True"
                                      Grid.Row="1"
                                      Grid.Column="0"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden" >
                            <Grid x:Name="VerticalDataGrid"
                                  ShowGridLines="False"
                                  Margin="3,0,0,20" />
                        </ScrollViewer>

                        <ScrollViewer x:Name="DataScrolViewer"
                                      HorizontalScrollBarVisibility="Visible"
                                      VerticalAlignment="Stretch"
                                      VerticalScrollBarVisibility="Visible"
                                      ScrollChanged="DataScrolViewer_ScrollChanged"
                                      Grid.Row="1"
                                      Grid.Column="1"
                                      Margin="0,0,0,0">
                            <Grid>
                                <Grid x:Name="ExpensesGrid"
                                      ShowGridLines="False"
                                      ScrollViewer.CanContentScroll="True"/>
                            </Grid>
                        </ScrollViewer>
                    </Grid>

                    <Grid x:Name="SummaryGrid"
                          VerticalAlignment="Bottom"
                          Grid.Row="1"
                          Margin="0,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="16"/>
                            <RowDefinition Height="16" />
                            <RowDefinition Height="16" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock HorizontalAlignment="Left"
                                   Margin="3,0,0,0"
                                   Grid.Row="0"
                                   TextWrapping="Wrap"
                                   Text="Dochód netto"
                                   VerticalAlignment="Bottom"/>
                        <TextBox x:Name="NetIncomeTextBox"
                                 Grid.Column="1"
                                 Grid.Row="0"
                                 Margin="0,0,15,0"
                                 TextWrapping="Wrap"
                                 TextAlignment="Right"
                                 VerticalAlignment="Top"
                                 LostFocus="IncomeTextBox_ChangedOrLostFocus"
                                 TextChanged="IncomeTextBox_ChangedOrLostFocus"/>
                        <TextBlock Grid.Column="1"
                                   Grid.Row="0"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,3,0"
                                   TextWrapping="Wrap"
                                   TextAlignment="Right"
                                   Text=" zł"
                                   VerticalAlignment="Top"/>
                        <TextBlock HorizontalAlignment="Left"
                                   Margin="3,0,0,0"
                                   Grid.Row="1"
                                   TextWrapping="Wrap"
                                   Text="Inny dochód"
                                   VerticalAlignment="Bottom"/>
                        <TextBox x:Name="AddIncomeTextBox"
                                 Grid.Column="1"
                                 Grid.Row="1"
                                 Margin="0,0,15,0"
                                 TextWrapping="Wrap"
                                 TextAlignment="Right"
                                 VerticalAlignment="Top"
                                 LostFocus="IncomeTextBox_ChangedOrLostFocus"
                                 TextChanged="IncomeTextBox_ChangedOrLostFocus"/>
                        <TextBlock Grid.Column="1"
                                   Grid.Row="1"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,3,0"
                                   TextWrapping="Wrap"
                                   TextAlignment="Right"
                                   Text=" zł"
                                   VerticalAlignment="Top"/>
                        <TextBlock HorizontalAlignment="Left"
                                   Margin="3,0,0,0"
                                   Grid.Row="2"
                                   TextWrapping="Wrap"
                                   Text="Suma dochodów"
                                   VerticalAlignment="Bottom"/>
                        <TextBlock x:Name="IncomeSumTextBlock"
                                   Grid.Column="1"
                                   Grid.Row="2"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,3,0"
                                   TextWrapping="Wrap"
                                   TextAlignment="Right"
                                   Text="...zł"
                                   VerticalAlignment="Top"/>
                        <TextBlock HorizontalAlignment="Left"
                                   Margin="3,0,0,0"
                                   Grid.Row="0"
                                   Grid.Column="3"
                                   TextWrapping="Wrap"
                                   Text="Suma wydatków"
                                   VerticalAlignment="Bottom"/>
                        <TextBlock x:Name="ExpensesSumTextBlock"
                                   Grid.Column="4"
                                   Grid.Row="0"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,3,0"
                                   TextWrapping="Wrap"
                                   TextAlignment="Right"
                                   Text="...zł"
                                   VerticalAlignment="Top"/>
                        <TextBlock HorizontalAlignment="Left"
                                   Margin="3,0,0,0"
                                   Grid.Row="1"
                                   Grid.Column="3"
                                   TextWrapping="Wrap"
                                   Text="Bilans"
                                   VerticalAlignment="Bottom"/>
                        <TextBlock x:Name="BalanceTextBlock"
                                   Grid.Column="4"
                                   Grid.Row="1"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,3,0"
                                   TextWrapping="Wrap"
                                   TextAlignment="Right"
                                   Text="...zł"
                                   VerticalAlignment="Top"/>

                        <TextBlock HorizontalAlignment="Left"
                                   Margin="3,0,0,0"
                                   Grid.Row="0"
                                   Grid.Column="6"
                                   TextWrapping="Wrap"
                                   Text="Pozostałe dni"
                                   VerticalAlignment="Bottom"/>
                        <TextBlock x:Name="DaysLeftTextBlock"
                                   Grid.Column="7"
                                   Grid.Row="0"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,3,0"
                                   TextWrapping="Wrap"
                                   TextAlignment="Right"
                                   Text="..."
                                   VerticalAlignment="Top"/>
                        <TextBlock HorizontalAlignment="Left"
                                   Margin="3,0,0,0"
                                   Grid.Column="6"
                                   Grid.Row="1"
                                   TextWrapping="Wrap"
                                   Text="Dzienny wydatek"
                                   VerticalAlignment="Bottom"/>
                        <TextBlock x:Name="EstimatedDailyExpenseTextBlock"
                                   Grid.Column="7"
                                   Grid.Row="1"
                                   HorizontalAlignment="Right"
                                   Margin="0,0,3,0"
                                   TextWrapping="Wrap"
                                   TextAlignment="Right"
                                   Text="...zł"
                                   VerticalAlignment="Top"/>

                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Dziennik do odpuskwiania">
                <!--<TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Height="36"
                               Width="36"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/Icons/bug.png"/>
                    </StackPanel>
                </TabItem.Header>-->
                <Grid>
                    <Image Height="255"
                           Width="255"
                           Source="Images/jew.png"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Bottom"
                           Opacity="0.3"
                           Margin="0,0,20,0"
                           RenderOptions.BitmapScalingMode="Fant"/>
                    <ScrollViewer x:Name="logScrollViewer" Margin="0,0,0,0" PanningMode="Both">
                        <Grid>
                            <TextBlock x:Name="debugLogTextBlock" TextWrapping="Wrap" FontFamily="Consolas" FontSize="10" Margin="10" />
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="Wypalenie">
                <!--<TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Height="36"
                               Width="36"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/Icons/graph.png"/>
                    </StackPanel>
                </TabItem.Header>-->
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
            <TabItem Header="Historia">
                <!--<TabItem>
                <TabItem.Header>
                    <StackPanel Orientation="Horizontal">
                        <Image Height="36"
                               Width="36"
                               RenderOptions.BitmapScalingMode="Fant"
                               Source="Images/Icons/archive.png"/>
                    </StackPanel>
                </TabItem.Header>-->
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
