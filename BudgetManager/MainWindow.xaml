<Window x:Class="BudgetManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetManager" 
        mc:Ignorable="d"
        Title="Menedżer Budżetu"
        Height="450"
        Width="800"
        MinWidth="700"
        MinHeight="220"
        KeyDown="Window_KeyDown">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Plik">
                <MenuItem Header="Zapisz zmiany"
                          Click="SaveMenuItem_Click"/>
                <MenuItem Header="Ustawienia programu"
                          Click="SettingsMenuItem_Click"/>
                <Separator />
                <MenuItem Header="Zamknij"
                          Click="CloseMenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Wydatki">
                <MenuItem Header="Dodaj wydatek"
                          Click="AddExpenseMenuItem_Click"/>
                <Separator />
                <MenuItem x:Name="MenuItemPrev"
                          Header="Poprzedni miesiąc"
                          Click="PrevMenuItem_Click"
                          IsEnabled="False"/>
                <MenuItem x:Name="MenuItemNext"
                          Header="Następny miesiąc"
                          Click="NextPeriodMenuItem_Click"
                          IsEnabled="False"/>
                <Separator />
                <MenuItem Header="Miesiące"
                          Click="PeriodsMenuItem_Click"/>
                <MenuItem Header="Kategorie"
                          Click="CategoriesMenuItem_Click"/>
            </MenuItem>
            <!--<MenuItem Header="Widok">
                <MenuItem Header="Podsumowanie miesiąca"
                          IsEnabled="False"/>
                <MenuItem Header="Wszystkie wydatki w miesiącu"
                          IsEnabled="False"/>
                <MenuItem Header="Wypalenie"
                          IsEnabled="False"/>
                <Separator />
                <MenuItem Header="Podsumowanie ostatnich miesięcy"
                          IsEnabled="False"/>
            </MenuItem>-->
            <MenuItem Header="Informacje">
                <MenuItem Header="O programie"
                          Click="AboutMenuItem_Click"/>
                <Separator />
                <MenuItem Header="Pomoc"
                          Click="HelpMenuItem_Click"/>
            </MenuItem>
        </Menu>
        <Grid Margin="0,0,0,0" >
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBlock x:Name="PeriodDatesTextBlock"
                       Text="Period dates..."
                       Grid.Row="1"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Margin="10,7"/>

            <TabControl Margin="7,7,7,7"
                        Grid.Row="1"
                        SelectionChanged="TabControl_SelectionChanged">
                <TabItem x:Name="SummaryTabItem"
                         Header="Podsumowanie">
                    <Grid Margin="0,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="16" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"
                                              MinWidth="100"
                                              MaxWidth="300"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Rectangle Grid.Row="0"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="2"
                                   Fill="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" />

                        <Rectangle Grid.Row="1"
                                   Grid.Column="0"
                                   Fill="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" />

                        <Grid x:Name="Header"
                              Grid.Row="0"
                              Grid.Column="0">
                            <Button Content="Kategoria"
                                    HorizontalContentAlignment="Left"
                                    VerticalAlignment="Top"
                                    BorderThickness="0"
                                    Padding="3, 0, 0, 0"
                                    Click="CategoriesMenuItem_Click"/>

                        </Grid>

                        <ScrollViewer x:Name="HeaderDaysScrollViewer"
                                      CanContentScroll="True"
                                      Grid.Row="0"
                                      Grid.Column="1"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden"
                                      PanningMode="HorizontalOnly">
                            <Grid x:Name="HeaderDaysGrid"
                                  Margin="0,0,20,0"/>
                        </ScrollViewer>

                        <ScrollViewer x:Name="VerticalScrolViewer"
                                      CanContentScroll="True"
                                      ScrollChanged="VerticalScrolViewer_ScrollChanged"
                                      Grid.Row="1"
                                      Grid.Column="0"
                                      HorizontalScrollBarVisibility="Hidden"
                                      VerticalScrollBarVisibility="Hidden"
                                      PanningMode="VerticalOnly">
                            <Grid x:Name="VerticalDataGrid"
                                  Margin="0,0,0,17" />
                        </ScrollViewer>

                        <ScrollViewer x:Name="DataScrolViewer"
                                      HorizontalScrollBarVisibility="Visible"
                                      VerticalAlignment="Stretch"
                                      VerticalScrollBarVisibility="Visible"
                                      ScrollChanged="DataScrolViewer_ScrollChanged"
                                      Grid.Row="1"
                                      Grid.Column="1"
                                      Margin="0,0,0,0"
                                      PanningMode="Both"
                                      PanningRatio="1.2">
                            <Grid>
                                <Grid x:Name="ExpensesGrid"
                                      ScrollViewer.CanContentScroll="True"/>
                            </Grid>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                <TabItem x:Name="ListTabItem"
                         Header="Lista wydatków">
                    <Grid Margin="0,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="16" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Rectangle Grid.Row="0"
                                   Grid.Column="0"
                                   Grid.ColumnSpan="4"
                                   Fill="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}" />
                            <TextBlock Grid.Column="0"
                                       Text="Data"
                                       Margin="3,0,0,0"/>
                            <TextBlock Grid.Column="1"
                                       Text="Wartość"
                                       Margin="3,0,0,0"/>
                            <TextBlock Grid.Column="2"
                                       Text="Kategoria"
                                       Margin="3,0,0,0"/>
                            <TextBlock Grid.Column="3"
                                       Text="Dodatkowe informacje"
                                       Margin="3,0,0,0"/>

                        </Grid>
                        <ScrollViewer Grid.Row="1"
                                      PanningMode="VerticalOnly"
                                      PanningRatio="1.2">
                            <Grid x:Name="ExpensesListGrid"/>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                <TabItem x:Name="BurndownTabItem"
                         Header="Wypalenie">
                    <Grid x:Name="BurndownChartGrid"/>
                </TabItem>
                <TabItem x:Name="HistoryTabItem"
                         Header="Historia"
                         IsEnabled="False">
                    <Grid/>
                </TabItem>
            </TabControl>

            <Border Style="{StaticResource MyBorder}"
                    VerticalAlignment="Bottom"
                    Grid.Row="2"
                    Margin="7,0,7,7"
                    Padding="3">
                <Grid x:Name="SummaryGrid">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- column 0-1 -->
                    <TextBlock HorizontalAlignment="Left"
                               Grid.Row="0"
                               Grid.Column="0"
                               TextWrapping="Wrap"
                               Text="Wydatki codzienne"
                               VerticalAlignment="Bottom"/>
                    <TextBlock x:Name="DailyExpensesSumTextBlock"
                               Grid.Column="1"
                               Grid.Row="0"
                               HorizontalAlignment="Right"
                               TextWrapping="Wrap"
                               TextAlignment="Right"
                               Text="...zł"
                               VerticalAlignment="Top"
                               Margin="10,0,0,0"/>
                    <TextBlock HorizontalAlignment="Left"
                               Grid.Row="1"
                               Grid.Column="0"
                               TextWrapping="Wrap"
                               Text="Wydatki miesięczne"
                               VerticalAlignment="Bottom"/>
                    <TextBlock x:Name="MonthlyExpensesSumTextBlock"
                               Grid.Column="1"
                               Grid.Row="1"
                               HorizontalAlignment="Right"
                               TextWrapping="Wrap"
                               TextAlignment="Right"
                               Text="...zł"
                               VerticalAlignment="Top"
                               Margin="10,0,0,0"/>
                    <TextBlock HorizontalAlignment="Left"
                               Grid.Row="2"
                               Grid.Column="0"
                               TextWrapping="Wrap"
                               Text="Suma wydatków"
                               VerticalAlignment="Bottom"/>
                    <TextBlock x:Name="ExpensesSumTextBlock"
                               Grid.Column="1"
                               Grid.Row="2"
                               HorizontalAlignment="Right"
                               TextWrapping="Wrap"
                               TextAlignment="Right"
                               Text="...zł"
                               VerticalAlignment="Top"
                               Margin="10,0,0,0"/>
                    
                    <!-- column 3-4 -->
                    <TextBlock HorizontalAlignment="Left"
                               Grid.Column="3"
                               Grid.Row="0"
                               TextWrapping="Wrap"
                               Text="Dochód netto"
                               VerticalAlignment="Bottom"/>
                    <TextBlock x:Name="NetIncomeTextBlock"
                               Grid.Column="4"
                               Grid.Row="0"
                               HorizontalAlignment="Right"
                               TextWrapping="Wrap"
                               TextAlignment="Right"
                               Text="...zł"
                               VerticalAlignment="Top"
                               Margin="10,0,0,0"/>
                    <TextBlock HorizontalAlignment="Left"
                               Grid.Column="3"
                               Grid.Row="1"
                               TextWrapping="Wrap"
                               Text="Inny dochód"
                               VerticalAlignment="Bottom" Width="69"/>
                    <TextBlock x:Name="AddIncomeTextBlock"
                               Grid.Column="4"
                               Grid.Row="1"
                               HorizontalAlignment="Right"
                               TextWrapping="Wrap"
                               TextAlignment="Right"
                               Text="...zł"
                               VerticalAlignment="Top"
                               Margin="10,0,0,0"/>
                    <TextBlock HorizontalAlignment="Left"
                               Grid.Column="3"
                               Grid.Row="2"
                               TextWrapping="Wrap"
                               Text="Suma dochodów"
                               VerticalAlignment="Bottom"/>
                    <TextBlock x:Name="IncomeSumTextBlock"
                               Grid.Column="4"
                               Grid.Row="2"
                               HorizontalAlignment="Right"
                               TextWrapping="Wrap"
                               TextAlignment="Right"
                               Text="...zł"
                               VerticalAlignment="Top"
                               Margin="10,0,0,0"/>

                    <!-- column 6-7 -->
                    <TextBlock HorizontalAlignment="Left"
                               Grid.Column="6"
                               Grid.Row="0"
                               TextWrapping="Wrap"
                               Text="Suma dochodów"
                               VerticalAlignment="Bottom"/>
                    <TextBlock x:Name="IncomeSumTextBlock2"
                               Grid.Column="7"
                               Grid.Row="0"
                               HorizontalAlignment="Right"
                               TextWrapping="Wrap"
                               TextAlignment="Right"
                               Text="...zł"
                               VerticalAlignment="Top"
                               Margin="10,0,0,0"/>
                    <TextBlock HorizontalAlignment="Left"
                               Grid.Row="1"
                               Grid.Column="6"
                               TextWrapping="Wrap"
                               Text="Suma wydatków"
                               VerticalAlignment="Bottom"/>
                    <TextBlock x:Name="ExpensesSumTextBlock2"
                               Grid.Column="7"
                               Grid.Row="1"
                               HorizontalAlignment="Right"
                               TextWrapping="Wrap"
                               TextAlignment="Right"
                               Text="...zł"
                               VerticalAlignment="Top"
                               Margin="10,0,0,0"/>
                    <TextBlock HorizontalAlignment="Left"
                               Grid.Row="2"
                               Grid.Column="6"
                               TextWrapping="Wrap"
                               Text="Planowane oszczędności"
                               VerticalAlignment="Bottom"/>
                    <TextBlock x:Name="PlannedSavingsTextBlock"
                               Grid.Column="7"
                               Grid.Row="2"
                               HorizontalAlignment="Right"
                               TextWrapping="Wrap"
                               TextAlignment="Right"
                               Text="...zł"
                               VerticalAlignment="Top"
                               Margin="10,0,0,0"/>
                    <TextBlock HorizontalAlignment="Left"
                               Grid.Row="3"
                               Grid.Column="6"
                               TextWrapping="Wrap"
                               Text="Bilans"
                               VerticalAlignment="Bottom"/>
                    <TextBlock x:Name="BalanceTextBlock"
                               Grid.Column="7"
                               Grid.Row="3"
                               HorizontalAlignment="Right"
                               TextWrapping="Wrap"
                               TextAlignment="Right"
                               Text="...zł"
                               VerticalAlignment="Top"
                               Margin="10,0,0,0"/>

                    <!-- column 9-10 -->
                    <TextBlock HorizontalAlignment="Left"
                               Grid.Row="0"
                               Grid.Column="9"
                               TextWrapping="Wrap"
                               Text="Pozostałe dni"
                               VerticalAlignment="Bottom"/>
                    <TextBlock x:Name="DaysLeftTextBlock"
                               Grid.Column="10"
                               Grid.Row="0"
                               HorizontalAlignment="Right"
                               TextWrapping="Wrap"
                               TextAlignment="Right"
                               Text="..."
                               VerticalAlignment="Top"
                               Margin="10,0,0,0"/>
                    <TextBlock HorizontalAlignment="Left"
                               Grid.Column="9"
                               Grid.Row="1"
                               TextWrapping="Wrap"
                               Text="Dzienny wydatek"
                               VerticalAlignment="Bottom"/>
                    <TextBlock x:Name="EstimatedDailyExpenseTextBlock"
                               Grid.Column="10"
                               Grid.Row="1"
                               HorizontalAlignment="Right"
                               TextWrapping="Wrap"
                               TextAlignment="Right"
                               Text="...zł"
                               VerticalAlignment="Top"
                               Margin="10,0,0,0"/>

                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Window>
